<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="DriveMeCrazyApp.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="RegisterView"
    BackgroundColor="Transparent">

    <ScrollView>
        <Grid>
            <!-- רקע מדורג -->
            <BoxView>
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#daebe8" Offset="0.0" />
                        <GradientStop Color="#cfe0e8" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <!-- תוכן ראשי -->
            <VerticalStackLayout Padding="25" Spacing="10" IsEnabled="{Binding NotInServerCall}">

                <!-- כותרת -->
                <Label
                    Margin="0,10,0,30"
                    FontFamily="JumperBold"
                    FontSize="36"
                    HorizontalTextAlignment="Center"
                    Text="Create Account"
                    TextColor="#87bdd8"
                    FontAttributes="Bold" />

                <!-- תמונת פרופיל -->
                <Frame
                    Margin="0,0,0,20"
                    Padding="5"
                    BackgroundColor="White"
                    BorderColor="#b7d7e8"
                    CornerRadius="75"
                    HeightRequest="150"
                    WidthRequest="150"
                    HorizontalOptions="Center"
                    HasShadow="True">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Image
                            x:Name="theImageBug"
                            HeightRequest="140"
                            Source="{Binding PhotoURL}"
                            Aspect="AspectFill" />
                        <VerticalStackLayout Grid.Row="1" BackgroundColor="#87bdd8" Opacity="0.85">
                            <Label
                                HorizontalOptions="Center"
                                Text="Add Photo"
                                TextColor="White"
                                FontSize="14"
                                Padding="5">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding UploadPhotoCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <!-- שדות טקסט -->
                <!-- כל Label ו-Frame ממשיכים כמו בקוד שלך -->

                <!-- קבוצה של User Type -->
                <Frame CornerRadius="10" HasShadow="False" BackgroundColor="White" BorderColor="#b7d7e8" Padding="15" Margin="0,10,0,20">
                    <StackLayout RadioButtonGroup.GroupName="type" RadioButtonGroup.SelectedValue="{Binding Iskid}" Spacing="10">
                        <Label Margin="0,5,0,10" Text="User Type" TextColor="#87bdd8" FontAttributes="Bold" />

                        <Grid ColumnDefinitions="Auto,*" Margin="0,5">
                            <RadioButton
                                Grid.Column="0"
                                Content="Parent"
                                GroupName="type"
                                Value="False"
                                TextColor="#87bdd8" />
                        </Grid>

                        <Grid ColumnDefinitions="Auto,*" Margin="0,5">
                            <RadioButton
                                Grid.Column="0"
                                Content="Child"
                                GroupName="type"
                                Value="True"
                                TextColor="#87bdd8" />
                        </Grid>

                        <StackLayout IsVisible="{Binding Iskid}" Margin="0,10,0,0">
                            <Label 
                                Text="Parent Email"
                                TextColor="#87bdd8"
                                FontAttributes="Bold"
                                Margin="5,0" />
                            <Entry
                                Placeholder="Enter Parent Email"
                                PlaceholderColor="#b7d7e8"
                                Style="{StaticResource entryStyle}"
                                Text="{Binding EmailOwner}"
                                BackgroundColor="Transparent"
                                Margin="0,5" />
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- כפתורים -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="15" Margin="0,5,0,20">
                    <Button
                        Grid.Column="0"
                        Command="{Binding CancelCommand}"
                        IsEnabled="{Binding NotInServerCall}"
                        Text="Cancel"
                        BackgroundColor="#cfe0e8"
                        TextColor="#87bdd8"
                        CornerRadius="25"
                        FontAttributes="Bold"
                        HeightRequest="50" />
                    <Button
                        Grid.Column="1"
                        Command="{Binding RegisterCommand}"
                        IsEnabled="{Binding NotInServerCall}"
                        Text="Register"
                        BackgroundColor="#87bdd8"
                        TextColor="White"
                        CornerRadius="25"
                        FontAttributes="Bold"
                        HeightRequest="50" />
                </Grid>
            </VerticalStackLayout>

            <!-- טעינה -->
            <ActivityIndicator
                HorizontalOptions="Center"
                IsRunning="{Binding InServerCall}"
                VerticalOptions="Center"
                Scale="1.5"
                Color="#87bdd8" />
        </Grid>
    </ScrollView>
</ContentPage>
